<div class="subhead">
  <p>Add a Cocktail</p>
  <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-main" %>
</div>
<div class="container">
  <%= simple_form_for @cocktail do |c| %>
    <%= c.input :name %>
    <%= c.input :description %>
    <%= c.input :photo, as: :file %>
    <%= c.submit "Add" %>
  <% end %>
</div>
