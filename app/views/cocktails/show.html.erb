<div class="subhead">
  <div class="subhead-title">
    <p><%= @cocktail.name %></p>
  </div>
  <div class="d-flex">
    <%= link_to "Add a Measure", new_cocktail_measure_path(@cocktail), class:"btn btn-main" %>
    <%= link_to "Back to Cocktails", cocktails_path, class:"btn btn-main" %>
  </div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@cocktail.photo.key) %>);">
  <div class="container">
    <p> <%= @cocktail.description %></p>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @cocktail.measures.each do |measure| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://source.unsplash.com/featured/?<%= measure.ingredient.name %>)">
        <p class="title"><%= measure.ingredient.name %></p>
        <p class="caption"><%= measure.description %></p>
      </div>
    <% end %>
  </div>
</div>
